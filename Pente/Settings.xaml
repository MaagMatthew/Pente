<Window x:Class="Pente.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pente"
        mc:Ignorable="d"
        Title="Settings" WindowStyle="None" WindowState="Maximized">
    <StackPanel>
        <TextBlock Text="Settings" FontSize="32" Margin="20,20,5,20"></TextBlock>
        <TextBlock Text="First Player Name" Margin="20,5,5,0"></TextBlock>
        <TextBox Name="TxtBx_FName" Margin="50,5,400,0"></TextBox>
        <TextBlock Text="Second Player Name" Margin="20,5,5,0"></TextBlock>
        <TextBox Name="TxtBx_SName" Margin="50,5,400,0"></TextBox>
        <TextBlock Text="CPU Enabled" Margin="20,5,5,0"></TextBlock>
        <RadioButton Content="CPU" Name="RdioBtn_EnabledCPU" Margin="50,5,5,0"></RadioButton>
        <TextBlock Text="Grid Size" Margin="20,5,5,0"></TextBlock>
        <ComboBox Name="CmboBx_Size" Margin="50,5,400,0"></ComboBox>
        <Button Content="Play" Name="Btn_Play" Click="Play" Width="400" Margin="0,40,0,20"></Button>
        <Button Content="Go Back" Name="Btn_GoBack" Click="GoHome" Width="300"></Button>
    </StackPanel>
</Window>
